{% extends 'base.html.twig' %}

{% block title %}SoundScape Hub - Profile{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% set roles = user.getRoles() %}

        <!-- Role-based Icon -->
        <div class="position-absolute top-0 start-0 p-3">
            <img src="{{ 'ROLE_ADMIN' in roles ? '/images/admin-icon.png' : '/images/user-icon.png' }}"
                 alt="{{ 'ROLE_ADMIN' in roles ? 'Admin' : 'User' }} Icon"
                 class="img-fluid" style="width: 50px; height: 50px;">
        </div>

        <!-- Profile Card -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">User Profile</h2>
            </div>
            <div class="card-body">
                <h4 class="card-title">
                    {{ userDetails.firstName }} {{ userDetails.lastName }}
                    <span class="badge bg-secondary">{{ 'ROLE_ADMIN' in roles ? 'Admin' : 'User' }}</span>
                </h4>

                <!-- User Account Details -->
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Email:</strong> {{ user.email }}</li>
                    <li class="list-group-item"><strong>Password:</strong> [Hidden for security]</li>
                    <li class="list-group-item"><strong>Password Token:</strong> {{ user.passwordToken ?? 'Not set' }}</li>
                    <li class="list-group-item"><strong>Created Reviews:</strong> {{ user.editionReviews|length }}</li>
                    <li class="list-group-item"><strong>Purchases:</strong> {{ user.purchases|length }}</li>
                </ul>

                <!-- User Details -->
                <div class="mt-3">
                    <h5>User Information</h5>
                    <ul class="list-group">
                        <li class="list-group-item"><strong>First Name:</strong> {{ userDetails.firstName }}</li>
                        <li class="list-group-item"><strong>Last Name:</strong> {{ userDetails.lastName }}</li>
                        <li class="list-group-item"><strong>Age:</strong> {{ userDetails.age }}</li>
                        <li class="list-group-item"><strong>Phone:</strong> {{ userDetails.phoneNo ?? 'Not provided' }}</li>
                        <li class="list-group-item"><strong>Created At:</strong> {{ userDetails.createdAt|date('Y-m-d H:i:s') }}</li>
                        <li class="list-group-item"><strong>Updated At:</strong> {{ userDetails.updatedAt|date('Y-m-d H:i:s') }}</li>
                    </ul>
                </div>

                <!-- Role-Specific Interface -->
                <div class="mt-4">
                    {% if 'ROLE_ADMIN' in roles %}
                        <h5 class="text-primary">Admin Interface</h5>
                        <p class="text-muted">As an admin, you can manage users and festival editions.</p>
                        <a href="{{ path('app_admin_users') }}" class="btn btn-outline-primary">Manage Users</a>
                    {% else %}
                        <h5 class="text-success">User Interface</h5>
                        <p class="text-muted">Explore your festival experience and manage your purchases.</p>
                        <a href="#" class="btn btn-outline-success disabled">View Purchases</a> {# Replace with actual route #}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
