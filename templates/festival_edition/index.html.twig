{# templates/festival_edition/list.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .editions-container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
        }

        .edition-card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }

        .edition-card:hover {
            transform: translateY(-2px);
        }

        .edition-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .edition-actions {
            display: flex;
            gap: 10px;
        }

        .btn-new-edition {
            background: linear-gradient(135deg, #ff8c00 0%, #ff5f6d 100%);
            color: white;
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            transition: transform 0.2s;
        }

        .btn-new-edition:hover {
            transform: translateY(-2px);
        }
    </style>

    <div class="header-container">
        <h1>{{ festival.name }} - Editions</h1>
        <a href="{{ path('festival_edition_new', {'festivalId': festival.id}) }}" class="btn-new-edition">
            Add New Edition
        </a>
    </div>

    <div class="editions-container">
        {% if editions|length > 0 %}
            {% for edition in editions %}
                <div class="edition-card">
                    <div class="edition-header">
                        <h3>Edition {{ edition.year }}</h3>
                        <div class="edition-actions">
                            <a href="{{ path('festival_edition_edit', {'id': edition.id}) }}" class="btn-edit">Edit</a>
                            <form method="post" action="{{ path('festival_edition_delete', {'id': edition.id}) }}" style="display: inline-block;"
                                  onsubmit="return confirm('Are you sure you want to delete this edition?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ edition.id) }}">
                                <button class="btn-delete">Delete</button>
                            </form>
                        </div>
                    </div>
                    <div class="edition-details">
                        <p><strong>Start Date:</strong> {{ edition.startDate|date('Y-m-d') }}</p>
                        <p><strong>End Date:</strong> {{ edition.endDate|date('Y-m-d') }}</p>
                        <p><strong>Attendance:</strong> {{ edition.attendance }}</p>
                        {# Add other edition details #}
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <p class="no-editions">No editions found for this festival.</p>
        {% endif %}
    </div>
{% endblock %}
