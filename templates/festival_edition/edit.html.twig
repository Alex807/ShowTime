{% extends 'base.html.twig' %}

{% block title %}Edit Festival Edition{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        .edit-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            background: linear-gradient(45deg, #ff7f50, #9c2fb5, #ff4040, #e6f3e6);
            background-size: 400% 400%;
            animation: gradientAnimation 15s ease infinite;
        }

        @keyframes gradientAnimation {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .edit-card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
            max-width: 600px;
            width: 100%;
            color: #333;
            z-index: 1;
            position: relative;
            margin-top: 5rem; /* Move the card down, not the gradient */
            margin-bottom: 2rem;
        }

        .edit-card h1 {
            font-size: 2.2rem;
            margin-bottom: 1.5rem;
            text-align: center;
            color: #ff7f50;
        }

        .form-group {
            margin-bottom: 0.6rem;
        }

        .form-group label {
            font-size: 0.95rem;
            font-weight: 600;
            color: #008080;
            margin-bottom: 0.3rem;
            display: block;
        }

        .required-field::after {
            content: " *";
            color: #ff4040;
        }

        .form-control {
            font-size: 0.9rem;
            padding: 10px 12px;
            border: 2px solid #dcdcdc;
            border-radius: 6px;
            background-color: #fafafa;
            color: #333;
            width: 100%;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #ff7f50;
            outline: none;
            box-shadow: 0 0 6px rgba(255, 127, 80, 0.3);
        }

        .no-arrows::-webkit-outer-spin-button,
        .no-arrows::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        .no-arrows {
            -moz-appearance: textfield;
        }

        .btn-custom {
            background: linear-gradient(45deg, #ff7f50, #008080);
            border: none;
            padding: 10px 20px;
            font-size: 1.1rem;
            border-radius: 20px;
            color: white;
            width: 100%;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .btn-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
            background: linear-gradient(45deg, #008080, #ff7f50);
        }

        .btn-cancel {
            background: linear-gradient(45deg, #ff4040, #dc143c);
            border: none;
            padding: 10px 20px;
            font-size: 1.1rem;
            border-radius: 20px;
            color: white;
            width: 100%;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        .btn-cancel:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
            background: linear-gradient(45deg, #dc143c, #ff4040);
        }

        .error-container {
            margin-bottom: 1rem;
        }

        .error-message {
            color: #ff4040;
            font-size: 0.9rem;
            margin-top: 5px;
            text-align: left;
            display: block;
        }

        .alert {
            background-color: #e6f3e6;
            color: #008080;
            padding: 10px;
            border-radius: 5px;
            margin: 1rem 0;
            text-align: center;
        }

        @media (max-width: 768px) {
            .edit-card {
                padding: 15px;
            }
            .edit-card h1 {
                font-size: 1.8rem;
            }
            .form-group label {
                font-size: 0.85rem;
            }
            .form-control {
                font-size: 0.8rem;
            }
            .error-message {
                font-size: 0.8rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="edit-container">
        <div class="edit-card">
            <h1>Edit Festival Edition</h1>

            <turbo-frame id="festival_edition_edit_{{ edition.id }}" target="_top">
                {{ form_start(form, {
                    'attr': {
                        'data-turbo-frame': '_top'
                    }
                }) }}

                <!-- Display global form errors -->
                {% if form.vars.errors|length > 0 %}
                    <div class="error-container">
                        {% for error in form.vars.errors %}
                            <span class="error-message">{{ error.message }}</span>
                        {% endfor %}
                    </div>
                {% endif %}

                {% for field in form %}
                    <div class="form-group">
                        {{ form_label(field, null, {'label_attr': {'class': field.vars.required ? 'required-field' : ''}}) }}
                        {{ form_widget(field, {'attr': {
                            'class': 'form-control' ~ (field.vars.name in ['year_happened', 'people_capacity'] ? ' no-arrows' : '') ~ (field.vars.name == 'status' ? ' form-select' : ''),
                            'required': field.vars.required ? 'required' : null
                        }}) }}
                        {% for error in field.vars.errors %}
                            <span class="error-message">{{ error.message }}</span>
                        {% endfor %}
                    </div>
                {% endfor %}

                <div style="display: flex; justify-content: space-between; gap: 10px;">
                    <button type="submit" class="btn-custom" data-turbo="false">Save Changes</button>
                    <a href="{{ path('festival_edition_list', {'festival': festival.id}) }}" class="btn-cancel">Cancel</a>
                </div>

                {{ form_end(form, {'render_rest': false}) }}
            </turbo-frame>


        </div>
    </div>

    <script>
        // Handle form submission
        document.addEventListener('turbo:submit-end', function(event) {
            if (event.detail.success) {
                Turbo.visit('{{ path('festival_edition_list', {'festival': festival.id}) }}', { action: 'replace' });
            }
        });
    </script>

    {% include 'common_twig_code/footer.html.twig' %}
{% endblock %}
