{% extends 'base.html.twig' %}

{% block body %}
    <style>
        body {
            background-color: #73AAECFF;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        .header-container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 20px;
            margin-bottom: 30px;
        }

        .logo {
            width: 250px;
            height: auto;
        }

        h1 {
            color: #004d99;
            font-size: 2.5em;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: #eff6ff;
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 12px 15px;
            border-bottom: 1px solid #ccc;
            text-align: left;
        }

        tr:hover {
            background-color: #d0e7ff;
            cursor: pointer;
        }

        .action-buttons {
            display: none;
            margin-top: 10px;
        }

        .btn {
            padding: 8px 14px;
            margin-right: 10px;
            color: white;
            border: 1px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 14px;
        }

        .btn.details {
            background-color: #007BFF;
        }

        .btn.edit {
            background-color: #ffc107;
            color: #000;
        }


        .btn.delete {
            background-color: #dc3545;
        }

        .alert {
            margin-bottom: 20px;
            padding: 10px;
            border-radius: 4px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        .alert-error {
            background-color: #f8d7da;
            color: #721c24;
        }

        .festival-container {
            margin-bottom: 30px;
        }
    </style>

    <div class="header-container">
        <img src="{{ asset('images/AppLogo.png') }}" alt="Logo" class="logo">
        <h1>Festivals List</h1>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <table id="festivalTable">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>City</th>
        </tr>
        </thead>
        <tbody>
        {% for festival in festivals %}
            <tr class="festival-row" data-id="{{ festival.id }}">
                <td>{{ festival.id }}</td>
                <td>{{ festival.name }}</td>
                <td>{{ festival.city }}</td>
            </tr>
            <tr class="action-buttons" id="actions-{{ festival.id }}">
                <td colspan="3">
                    <a href="{{ path('festival_show', {id: festival.id}) }}"
                       class="btn details"> Details</a>

                    <a href="{{ path('festival_edit', {id: festival.id}) }}" class="btn edit">Edit</a>

                    <form method="post" action="{{ path('festival_delete', {id: festival.id}) }}"
                          style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this festival?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_festival_' ~ festival.id) }}">
                        <button class="btn delete">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="pagination-container">
        {% if festivals.pageCount > 1 %}
            <div class="pagination-buttons">
                {% if festivals.currentPageNumber > 1 %}
                    <a class="btn pagination-btn" href="{{ path('festival_index', {'page': festivals.currentPageNumber - 1}) }}">
                        Previous
                    </a>
                {% else %}
                    <span class="btn pagination-btn disabled">Previous</span>
                {% endif %}

                <span class="page-number">Page {{ festivals.currentPageNumber }} of {{ festivals.pageCount }}</span>

                {% if festivals.currentPageNumber < festivals.pageCount %}
                    <a class="btn pagination-btn" href="{{ path('festival_index', {'page': festivals.currentPageNumber + 1}) }}">
                        Next
                    </a>
                {% else %}
                    <span class="btn pagination-btn disabled">Next</span>
                {% endif %}
            </div>
        {% endif %}
    </div>

    <script>
        document.querySelectorAll('.festival-row').forEach(row => {
            row.addEventListener('click', () => {
                const id = row.getAttribute('data-id');
                const actionsRow = document.getElementById('actions-' + id);
                const isVisible = actionsRow.style.display === 'table-row';
                document.querySelectorAll('.action-buttons').forEach(el => el.style.display = 'none');
                actionsRow.style.display = isVisible ? 'none' : 'table-row';
            });
        });
    </script>

    <style> {# code for navigate the pages buttons #}
        .pagination-container {
            text-align: center;
            margin-top: 20px;
        }

        .pagination-buttons {
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

        .pagination-btn {
            background-color: #007BFF;
            color: white;
            padding: 8px 14px;
            border: none;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            cursor: pointer;
        }

        .pagination-btn.disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

        .page-number {
            font-size: 16px;
            font-weight: bold;
            color: #333;
        }
    </style>
{% endblock %}
