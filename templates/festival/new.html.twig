{% extends 'base.html.twig' %}

{% block body %}
    <style>
        body {
            background: linear-gradient(135deg, #73AAECFF 0%, #5d3fd3 100%);
            font-family: 'Poppins', sans-serif;
            padding: 20px;
            min-height: 100vh;
        }

        .header-container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 20px;
            margin-bottom: 30px;
            animation: fadeInDown 0.8s ease;
        }

        .logo {
            width: 200px;
            height: auto;
            filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
        }

        h1 {
            color: white;
            font-size: 2.8em;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
            margin: 0;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 20px;
            max-width: 600px;
            margin: auto;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            animation: slideUpFade 0.8s ease;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #2c3e50;
            font-weight: 500;
            font-size: 1.1em;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1em;
            transition: all 0.3s ease;
            background: white;
        }

        .form-group input:focus {
            border-color: #5d3fd3;
            box-shadow: 0 0 0 3px rgba(93, 63, 211, 0.1);
            outline: none;
        }

        /* Remove arrows from number input */
        .form-group input[type="number"] {
            -moz-appearance: textfield;
        }

        .form-group input[type="number"]::-webkit-outer-spin-button,
        .form-group input[type="number"]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        .btn-container {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .btn {
            flex: 1;
            padding: 12px 25px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 1em;
            font-weight: 600;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-create {
            background: linear-gradient(135deg, #ff8c00 0%, #ff5f6d 100%);
            color: white;
        }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 140, 0, 0.3);
        }

        .btn-back {
            background: #f8f9fa;
            color: #2c3e50;
            text-decoration: none;
            text-align: center;
        }

        .btn-back:hover {
            background: #e9ecef;
        }

        .alert-success {
            background: linear-gradient(135deg, #00b09b 0%, #96c93d 100%);
            color: white;
            padding: 20px;
            border-radius: 15px;
            margin: 20px auto;
            max-width: 600px;
            text-align: center;
            animation: slideUpFade 0.5s ease;
            box-shadow: 0 5px 15px rgba(0, 176, 155, 0.2);
        }

        .alert-error {
            background: linear-gradient(135deg, #ff5f6d 0%, #ffc371 100%);
            color: white;
            padding: 20px;
            border-radius: 15px;
            margin: 20px auto;
            max-width: 600px;
            text-align: center;
            animation: slideUpFade 0.5s ease;
            box-shadow: 0 5px 15px rgba(255, 95, 109, 0.2);
        }

        .popup-message {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            animation: slideInRight 0.5s ease;
        }

        @keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .festival-icon {
            position: absolute;
            opacity: 0.1;
            pointer-events: none;
        }

        .icon-1 {
            top: 10%;
            left: 5%;
            transform: rotate(-15deg);
        }

        .icon-2 {
            bottom: 10%;
            right: 5%;
            transform: rotate(15deg);
        }

        /* Required field indicator */
        .required-field label::after {
            content: ' *';
            color: #ff5f6d;
            font-weight: bold;
        }

        /* Error message styling */
        .form-error {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 5px;
            display: block;
            animation: fadeIn 0.3s ease;
        }

        .form-group input.is-invalid {
            border-color: #dc3545;
            background-color: #fff8f8;
        }

        .form-group input.is-invalid:focus {
            box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.1);
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-5px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideUpFade {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Custom styling for specific form fields */
        {{ form_start(form) }}
        {% for field in form.children %}
        .form-group-{{ field.vars.name }} {
            position: relative;
        }

        {% endfor %}
    </style>

    <!-- Add Font Awesome and Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Festival themed background icons -->
    <i class="fas fa-music festival-icon icon-1 fa-5x"></i>
    <i class="fas fa-guitar festival-icon icon-2 fa-5x"></i>


    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="popup-message alert-{{ label }}">
                {% if label == 'error' %}
                    <i class="fas fa-exclamation-circle fa-2x" style="margin-bottom: 10px;"></i>
                {% else %}
                    <i class="fas fa-check-circle fa-2x" style="margin-bottom: 10px;"></i>
                {% endif %}
                <p style="margin: 0;">{{ message }}</p>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="header-container">
        <img src="{{ asset('images/AppLogo.png') }}" alt="Logo" class="logo">
        <h1>Create New Festival</h1>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert-success">
            <i class="fas fa-check-circle fa-2x" style="margin-bottom: 10px;"></i>
            <p style="margin: 0;">{{ message }}</p>
        </div>
    {% endfor %}

    <div class="form-container">
        {{ form_start(form) }}
        {% for field in form.children %}
            {% if field.vars.name != '_token' %}
                <div class="form-group form-group-{{ field.vars.name }} {% if field.vars.required %}required-field{% endif %}">
                    {{ form_label(field) }}
                    {{ form_widget(field, {
                        'attr': {
                            'class': 'form-input' ~ (field.vars.valid ? '' : ' is-invalid'),
                            'placeholder': 'Enter ' ~ field.vars.name|replace({'_': ' '})|title
                        }
                    }) }}
                    {% if not field.vars.valid %}
                        <div class="form-error">
                            {{ form_errors(field) }}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        {% endfor %}

        <div class="btn-container">
            <a href="{{ path('festival_index') }}" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <button type="submit" class="btn btn-create">
                Create Festival
            </button>
        </div>
        {{ form_end(form) }}
    </div>

    <script>
        // Add smooth focus effects
        document.querySelectorAll('.form-input').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('focused');
            });

            input.addEventListener('blur', function() {
                this.parentElement.classList.remove('focused');
            });
        });
    </script>
{% endblock %}
