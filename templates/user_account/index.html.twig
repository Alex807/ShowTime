{% extends 'base.html.twig' %}

{% block title %}Manage Users - SoundScape Hub{% endblock %}

{% block body %}
    <div class="container profile-container">
        <div class="action-panel">
            <h3 class="action-title">
                <i class="fas fa-users me-2"></i>
                Manage Users
            </h3>
            {% for flash_message in app.flashes('success') %}
                <div class="alert alert-success">{{ flash_message }}</div>
            {% endfor %}
            {% for flash_message in app.flashes('error') %}
                <div class="alert alert-danger">{{ flash_message }}</div>
            {% endfor %}
            {% if users|length > 0 %}
                <div class="row">
                    {% for user in users %}
                        <div class="col-md-6 mb-3">
                            <div class="info-card">
                                <h5 class="info-card-title">
                                    <i class="fas fa-user"></i>
                                    {{ user.email|default('Unknown') }}
                                </h5>
                                <div class="info-item">
                                    <span class="info-label">Roles:</span>
                                    <span class="info-value">{{ user.roles|join(', ')|replace({'ROLE_': ''})|capitalize|default('None') }}</span>
                                </div>
                                <div class="d-flex gap-2 mt-3">
                                    <a href="{{ path('user_account_show', {'id': user.id}) }}" class="action-btn user-btn">
                                        <i class="fas fa-eye"></i>
                                        View Details
                                    </a>
                                    <form method="post" action="{{ path('user_account_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_user_account_' ~ user.id) }}">
                                        <button type="submit" class="action-btn danger-btn">
                                            <i class="fas fa-trash"></i>
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                {{ knp_pagination_render(users) }}
            {% else %}
                <div class="no-results">
                    <i class="fas fa-users"></i>
                    <div>No users found. Please check the database or try again.</div>
                </div>
            {% endif %}
        </div>
    </div>
    <style>
        .danger-btn {
            border-color: var(--danger-color);
            color: var(--danger-color);
        }
        .danger-btn:hover {
            background: var(--danger-color);
            color: var(--white);
        }
    </style>
{% endblock %}
