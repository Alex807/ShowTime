{% extends 'base.html.twig' %}

{% block title %}{{ amenity.name }} - Amenity Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .main-container {
            padding: 40px 0;
        }

        .amenity-details-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: 0 auto;
            position: relative;
            overflow: hidden;
        }

        .amenity-details-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(45deg, #667eea, #764ba2);
        }

        .details-header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 30px;
            border-bottom: 2px solid #f8f9fa;
        }

        .amenity-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .amenity-id-badge {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
            padding: 8px 20px;
            border-radius: 25px;
            font-size: 0.9rem;
            font-weight: 600;
            display: inline-block;
        }

        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }

        .detail-item {
            background: #f8f9fa;
            padding: 25px;
            border-radius: 15px;
            border-left: 5px solid #667eea;
            transition: all 0.3s ease;
        }

        .detail-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .detail-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
            font-size: 1.2rem;
            color: white;
        }

        .capacity-icon {
            background: linear-gradient(45deg, #3498db, #2980b9);
        }

        .price-icon {
            background: linear-gradient(45deg, #f39c12, #e67e22);
        }

        .detail-label {
            font-size: 0.9rem;
            color: #7f8c8d;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
        }

        .detail-value {
            font-size: 1.4rem;
            color: #2c3e50;
            font-weight: 700;
        }

        .description-section {
            background: #f8f9fa;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 40px;
            border-left: 5px solid #667eea;
        }

        .description-title {
            font-size: 1.3rem;
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .description-text {
            color: #495057;
            font-size: 1.1rem;
            line-height: 1.6;
            margin: 0;
        }

        .no-description {
            color: #95a5a6;
            font-style: italic;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .action-btn {
            padding: 12px 30px;
            border-radius: 25px;
            font-size: 1.1rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            border: none;
            cursor: pointer;
        }

        .btn-back {
            background: linear-gradient(45deg, #6c757d, #495057);
            color: white;
        }

        .btn-edit {
            background: linear-gradient(45deg, #f39c12, #e67e22);
            color: white;
        }

        .btn-delete {
            background: linear-gradient(45deg, #e74c3c, #c0392b);
            color: white;
        }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            color: white;
            text-decoration: none;
        }

        .stats-summary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 30px;
            text-align: center;
        }

        .stats-title {
            font-size: 1.2rem;
            margin-bottom: 15px;
            opacity: 0.9;
        }

        .stats-value {
            font-size: 2rem;
            font-weight: 700;
        }

        @media (max-width: 768px) {
            .amenity-details-card {
                padding: 25px;
                margin: 10px;
            }

            .amenity-title {
                font-size: 2rem;
            }

            .details-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }

            .action-btn {
                width: 100%;
                max-width: 300px;
                justify-content: center;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container main-container">
        <div class="amenity-details-card">
            <div class="details-header">
                <h1 class="amenity-title">
                    <i class="fas fa-star"></i>
                    {{ amenity.name }}
                </h1>
                <span class="amenity-id-badge">Amenity #{{ amenity.id }}</span>
            </div>

            <div class="stats-summary">
                <div class="stats-title">Revenue Potential</div>
                <div class="stats-value">
                    ${{ (amenity.price * amenity.peopleCapacity)|number_format(2) }}
                </div>
                <small>Maximum capacity revenue</small>
            </div>

            <div class="details-grid">
                <div class="detail-item">
                    <div class="detail-icon capacity-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="detail-label">People Capacity</div>
                    <div class="detail-value">{{ amenity.peopleCapacity }} people</div>
                </div>

                <div class="detail-item">
                    <div class="detail-icon price-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="detail-label">Price per Person</div>
                    <div class="detail-value">${{ amenity.price|number_format(2) }}</div>
                </div>
            </div>

            <div class="description-section">
                <h3 class="description-title">
                    <i class="fas fa-info-circle"></i>
                    Description
                </h3>
                {% if amenity.description %}
                    <p class="description-text">{{ amenity.description }}</p>
                {% else %}
                    <p class="description-text no-description">No description provided for this amenity.</p>
                {% endif %}
            </div>

            <div class="action-buttons">
                <a href="{{ path('amenity_index') }}" class="action-btn btn-back">
                    <i class="fas fa-arrow-left"></i>
                    Back to List
                </a>
                <a href="{{ path('amenity_edit', {id: amenity.id}) }}" class="action-btn btn-edit">
                    <i class="fas fa-edit"></i>
                    Edit Amenity
                </a>
                <form method="post" action="{{ path('amenity_delete', {id: amenity.id}) }}"
                      style="display: inline;"
                      onsubmit="return confirm('Are you sure you want to delete this amenity? This action cannot be undone.');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_amenity_' ~ amenity.id) }}">
                    <button type="submit" class="action-btn btn-delete">
                        <i class="fas fa-trash"></i>
                        Delete Amenity
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
