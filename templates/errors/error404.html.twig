{% extends 'base.html.twig' %}

{% block title %}Page Not Found - SoundScape Hub{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #ff6b35;
            --secondary-color: #f7931e;
            --accent-color: #c5299b;
            --dark-color: #1a1a1a;
            --light-color: #ffffff;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            overflow-x: hidden;
        }

        .error-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        /* Animated background particles */
        .particles {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .particle {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 8s ease-in-out infinite;
        }

        .particle:nth-child(1) { width: 20px; height: 20px; left: 10%; animation-delay: 0s; }
        .particle:nth-child(2) { width: 15px; height: 15px; left: 20%; animation-delay: 1s; }
        .particle:nth-child(3) { width: 25px; height: 25px; left: 30%; animation-delay: 2s; }
        .particle:nth-child(4) { width: 12px; height: 12px; left: 40%; animation-delay: 3s; }
        .particle:nth-child(5) { width: 18px; height: 18px; left: 50%; animation-delay: 4s; }
        .particle:nth-child(6) { width: 22px; height: 22px; left: 60%; animation-delay: 5s; }
        .particle:nth-child(7) { width: 14px; height: 14px; left: 70%; animation-delay: 1.5s; }
        .particle:nth-child(8) { width: 28px; height: 28px; left: 80%; animation-delay: 2.5s; }
        .particle:nth-child(9) { width: 16px; height: 16px; left: 90%; animation-delay: 3.5s; }

        @keyframes float {
            0%, 100% { transform: translateY(100vh) rotate(0deg); opacity: 0; }
            10%, 90% { opacity: 1; }
            50% { transform: translateY(-10vh) rotate(180deg); }
        }

        .error-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 60px 40px;
            text-align: center;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.2);
            position: relative;
            z-index: 10;
            max-width: 600px;
            margin: 20px;
        }

        .error-number {
            font-size: 8rem;
            font-weight: 900;
            background: linear-gradient(45deg, var(--primary-color), var(--accent-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 20px;
            text-shadow: 0 0 30px rgba(255, 107, 53, 0.3);
            animation: pulse 2s ease-in-out infinite alternate;
        }

        @keyframes pulse {
            from { transform: scale(1); }
            to { transform: scale(1.05); }
        }

        .error-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 20px;
        }

        .error-subtitle {
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 40px;
            line-height: 1.6;
        }

        .error-icon {
            font-size: 4rem;
            color: var(--primary-color);
            margin-bottom: 30px;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-20px); }
            60% { transform: translateY(-10px); }
        }

        .action-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 40px;
        }

        .btn-error {
            padding: 15px 30px;
            font-size: 1.1rem;
            font-weight: 600;
            border: none;
            border-radius: 50px;
            text-decoration: none;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-error::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.6s;
        }

        .btn-error:hover::before {
            left: 100%;
        }

        .btn-primary-error {
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
            color: white;
        }

        .btn-primary-error:hover {
            background: linear-gradient(45deg, var(--secondary-color), var(--primary-color));
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(255, 107, 53, 0.4);
            color: white;
        }

        .btn-secondary-error {
            background: linear-gradient(45deg, var(--accent-color), #667eea);
            color: white;
        }

        .btn-secondary-error:hover {
            background: linear-gradient(45deg, #667eea, var(--accent-color));
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(197, 41, 155, 0.4);
            color: white;
        }

        .suggested-links {
            margin-top: 40px;
            padding-top: 30px;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }

        .suggested-links h5 {
            color: var(--dark-color);
            margin-bottom: 20px;
            font-weight: 600;
        }

        .link-list {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            justify-content: center;
        }

        .suggested-link {
            color: var(--accent-color);
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 20px;
            background: rgba(197, 41, 155, 0.1);
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .suggested-link:hover {
            background: var(--accent-color);
            color: white;
            transform: translateY(-2px);
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .error-card {
                padding: 40px 20px;
                margin: 10px;
            }

            .error-number {
                font-size: 6rem;
            }

            .error-title {
                font-size: 2rem;
            }

            .error-subtitle {
                font-size: 1rem;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }

            .btn-error {
                width: 100%;
                max-width: 300px;
            }

            .link-list {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="error-container">
        <!-- Animated particles -->
        <div class="particles">
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
        </div>

        <div class="error-card">
            <div class="error-icon">
                <i class="fas fa-music"></i>
            </div>

            <div class="error-number">404</div>

            <h1 class="error-title">Oops! Page Not Found</h1>

            <p class="error-subtitle">
                The festival you're looking for seems to have ended early!
                Don't worry, there are plenty of other amazing experiences waiting for you.
            </p>

            <div class="action-buttons">
                <a href="{{ path('app_home_page') }}" class="btn btn-error btn-primary-error">
                    <i class="fas fa-home me-2"></i>Back to Home
                </a>

                {% if app.user %}
                    <a href="{{ path('profile') }}" class="btn btn-error btn-secondary-error">
                        <i class="fas fa-user me-2"></i>My Profile
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-error btn-secondary-error">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                {% endif %}
            </div>

            <div class="suggested-links">
                <h5>Popular Destinations</h5>
                <div class="link-list">
                    <a href="{{ path('festival_index') }}" class="suggested-link">
                        <i class="fas fa-calendar-alt me-1"></i>Festivals
                    </a>
                    <a href="{{ path('artist_index') }}" class="suggested-link">
                        <i class="fas fa-microphone-alt me-1"></i>Artists
                    </a>
                    <a href="{{ path('amenity_index') }}" class="suggested-link">
                        <i class="fas fa-concierge-bell me-1"></i>Amenities
                    </a>
                    {% if app.user %}
                        <a href="{{ path('purchase_index') }}" class="suggested-link">
                            <i class="fas fa-ticket-alt me-1"></i>My Purchases
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <script>
        // Add some interactive effects
        document.addEventListener('DOMContentLoaded', function() {
            // Animate the error card on load
            const errorCard = document.querySelector('.error-card');
            errorCard.style.opacity = '0';
            errorCard.style.transform = 'translateY(50px)';

            setTimeout(() => {
                errorCard.style.transition = 'all 0.8s cubic-bezier(0.4, 0, 0.2, 1)';
                errorCard.style.opacity = '1';
                errorCard.style.transform = 'translateY(0)';
            }, 100);

            // Add click effect to buttons
            document.querySelectorAll('.btn-error').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    const ripple = document.createElement('span');
                    const rect = this.getBoundingClientRect();
                    const size = Math.max(rect.width, rect.height);
                    const x = e.clientX - rect.left - size / 2;
                    const y = e.clientY - rect.top - size / 2;

                    ripple.style.width = ripple.style.height = size + 'px';
                    ripple.style.left = x + 'px';
                    ripple.style.top = y + 'px';
                    ripple.classList.add('ripple');

                    this.appendChild(ripple);

                    setTimeout(() => {
                        ripple.remove();
                    }, 600);
                });
            });
        });
    </script>

    <style>
        .ripple {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            transform: scale(0);
            animation: ripple-animation 0.6s linear;
            pointer-events: none;
        }

        @keyframes ripple-animation {
            to {
                transform: scale(4);
                opacity: 0;
            }
        }
    </style>
{% endblock %}
