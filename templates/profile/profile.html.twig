    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('userSearchInput');
            const searchResults = document.getElementById('searchResults');
            const searchMessage = document.getElementById('searchMessage');
            const searchSpinner = document.getElementById('searchSpinner');

            let searchTimeout;
            let currentRequest;

            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const query = this.value.trim();

                    // Clear previous timeout
                    clearTimeout(searchTimeout);

                    // Cancel previous request
                    if (currentRequest) {
                        currentRequest.abort();
                    }

                    if (query.length < 2) {
                        hideResults();
                        return;
                    }

                    // Show spinner
                    searchSpinner.style.display = 'block';

                    // Debounce search
                    searchTimeout = setTimeout(() => {
                        performSearch(query);
                    }, 300);
                });

                // Hide results when clicking outside
                document.addEventListener('click', function(e) {
                    if (!e.target.closest('.search-container')) {
                        hideResults();
                    }
                });
            }

            function performSearch(query) {
                const url = `{{ path('api_search_users') }}?q=${encodeURIComponent(query)}&limit=10`;

                currentRequest = fetch(url)
                    .then(response => response.json())
                    .then(data => {
                        searchSpinner.style.display = 'none';
                        displayResults(data);
                    })
                    .catch(error => {
                        if (error.name !== 'AbortError') {
                            console.error('Search error:', error);
                            searchSpinner.style.display = 'none';
                            showMessage('An error occurred while searching. Please try again.');
                        }
                    });
            }

            function displayResults(data) {
                if (data.users && data.users.length > 0) {
                    let html = '';
                    data.users.forEach(user => {
                        const roleClass = user.roles.includes('ROLE_OWNER') ? 'owner' :
                            (user.roles.includes('ROLE_ADMIN') ? 'admin' : 'user');
                        const roleText = user.roles.includes('ROLE_OWNER') ? 'Owner' :
                            (user.roles.includes('ROLE_ADMIN') ? 'Admin' : 'User');

                        const avatarSrc = user.profileImage ?
                            `{{ asset('uploads/profile_images/') }}${user.profileImage}` :
                            `{{ asset('images/default-avatar.png') }}`;

                        html += `
                    <div class="search-result-item" data-user-id="${user.id}">
                        <img src="${avatarSrc}" alt="${user.fullName}" class="search-result-avatar">
                        <div class="search-result-info">
                            <div class="search-result-name">${user.fullName}</div>
                            <div class="search-result-email">${user.email}</div>
                            <div class="search-result-meta">
                                <span class="search-result-badge ${roleClass}">${roleText}</span>
                                ${user.phoneNo ? `<span class="text-muted">ðŸ“ž ${user.phoneNo}</span>` : ''}
                                ${user.age ? `<span class="text-muted">ðŸ‘¤ ${user.age} years</span>` : ''}
                            </div>
                        </div>
                        <div class="search-actions">
                            <a href="/profile/${user.id}" class="search-action-btn">
                                <i class="fas fa-eye"></i> View
                            </a>
                            {% if isOwner %}
                            <a href="/admin/user/${user.id}/edit" class="search-action-btn">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            {% endif %}
                        </div>
                    </div>
                `;
                    });

                    searchResults.innerHTML = html;
                    searchResults.style.display = 'block';
                    searchMessage.style.display = 'none';

                    // Add click handlers for result items
                    document.querySelectorAll('.search-result-item').forEach(item => {
                        item.addEventListener('click', function(e) {
                            if (!e.target.closest('.search-actions')) {
                                const userId = this.dataset.userId;
                                window.location.href = `/profile/${userId}`;
                            }
                        });
                    });

                } else {
                    searchResults.innerHTML = `
                <div class="no-results">
                    <i class="fas fa-user-slash"></i>
                    <div>No users found matching your search.</div>
                </div>
            `;
                    searchResults.style.display = 'block';
                    searchMessage.style.display = 'none';
                }
            }

            function showMessage(message) {
                searchMessage.textContent = message;
                searchMessage.style.display = 'block';
                searchResults.style.display = 'none';
            }

            function hideResults() {
                searchResults.style.display = 'none';
                searchMessage.style.display = 'none';
                searchSpinner.style.display = 'none';
            }
        });
    </script>
{% endblock %}
