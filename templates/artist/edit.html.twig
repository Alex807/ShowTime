{% extends 'base.html.twig' %}

{% block title %}Edit Artist{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        .artist-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 20px 0;
        }

        .artist-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            max-width: 800px;
            width: 100%;
            color: #333;
            position: relative;
        }

        .artist-card .card-header {
            background: linear-gradient(45deg, #e6763b, #c359d3);
            color: white;
            padding: 20px;
            border-radius: 10px;
            margin: -30px -30px 30px -30px;
            display: flex;
            align-items: center;
        }

        .artist-card h1 {
            font-size: 2rem;
            margin: 0;
            flex-grow: 1;
        }

        .logo-img {
            height: 60px;
            margin-left: 8px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            font-size: 1rem;
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.5rem;
            display: block;
        }

        .required-field::after {
            content: " *";
            color: #dc3545;
        }

        .optional-field::after {
            content: " (optional)";
            color: #6c757d;
            font-weight: normal;
            font-size: 0.9rem;
        }

        .form-control {
            font-size: 0.95rem;
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            background-color: #fff;
            color: #495057;
            width: 100%;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #f39c12;
            outline: none;
            box-shadow: 0 0 8px rgba(243, 156, 18, 0.25);
        }

        .form-control.is-invalid {
            border-color: #dc3545;
        }

        .btn-custom {
            background: linear-gradient(45deg, #f39c12, #e67e22);
            border: none;
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 25px;
            color: white;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(243, 156, 18, 0.4);
            background: linear-gradient(45deg, #e67e22, #f39c12);
            color: white;
            text-decoration: none;
        }

        .btn-outline-custom {
            background: transparent;
            border: 2px solid #6c757d;
            padding: 10px 28px;
            font-size: 1.1rem;
            border-radius: 25px;
            color: #6c757d;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-outline-custom:hover {
            background: #6c757d;
            color: white;
            text-decoration: none;
        }

        .btn-danger-custom {
            background: linear-gradient(45deg, #e74c3c, #c0392b);
            border: none;
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 25px;
            color: white;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-danger-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(231, 76, 60, 0.4);
            background: linear-gradient(45deg, #c0392b, #e74c3c);
            color: white;
            text-decoration: none;
        }

        /* Error message styling */
        .error-container {
            margin-bottom: 1.5rem;
        }

        .error-message {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
            display: block;
        }

        .alert {
            background-color: #f8d7da;
            color: #721c24;
            padding: 12px 15px;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            border: 1px solid #f5c6cb;
        }

        .form-row {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
        }

        .form-col {
            flex: 1;
            min-width: 300px;
        }

        .button-group {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 2rem;
            gap: 15px;
        }

        .button-left {
            display: flex;
            gap: 15px;
        }

        @media (max-width: 768px) {
            .artist-card {
                padding: 20px;
                margin: 10px;
            }

            .artist-card .card-header {
                margin: -20px -20px 20px -20px;
                padding: 15px;
                flex-direction: column;
                text-align: center;
            }

            .logo-img {
                margin-left: 0;
                margin-top: 10px;
            }

            .form-row {
                flex-direction: column;
                gap: 0;
            }

            .form-col {
                min-width: auto;
            }

            .button-group {
                flex-direction: column;
                gap: 10px;
            }

            .button-left {
                flex-direction: column;
                width: 100%;
                gap: 10px;
            }

            .btn-custom, .btn-outline-custom, .btn-danger-custom {
                width: 100%;
                text-align: center;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="artist-container">
        <div class="artist-card">
            <div class="card-header">
                <h1>Edit Artist</h1>
                <img src="{{ asset('images/appLogo.png') }}" alt="Logo" class="logo-img">
            </div>

            {{ form_start(artistForm) }}

            <!-- Display only duplicate artist errors (generated by UniqueEntity annotation) -->
            {% if artistForm.vars.errors|length > 0 %}
                <div class="error-container">
                    {% for error in artistForm.vars.errors %}
                        {% if 'already exists' in error.message %}
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle"></i>
                                {{ error.message }}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}

            <div class="form-row">
                <div class="form-col">
                    <div class="form-group">
                        {{ form_label(artistForm.realName, 'Artist Real Name', {'label_attr': {'class': 'required-field'}}) }}
                        {{ form_widget(artistForm.realName, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                        {% for error in artistForm.realName.vars.errors %}
                            <span class="error-message">{{ error.message }}</span>
                        {% endfor %}
                    </div>
                </div>

                <div class="form-col">
                    <div class="form-group">
                        {{ form_label(artistForm.stageName, 'Artist Stage Name', {'label_attr': {'class': 'required-field'}}) }}
                        {{ form_widget(artistForm.stageName, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                        {% for error in artistForm.stageName.vars.errors %}
                            <span class="error-message">{{ error.message }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-col">
                    <div class="form-group">
                        {{ form_label(artistForm.musicGenre, 'Music Genre', {'label_attr': {'class': 'required-field'}}) }}
                        {{ form_widget(artistForm.musicGenre, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                        {% for error in artistForm.musicGenre.vars.errors %}
                            <span class="error-message">{{ error.message }}</span>
                        {% endfor %}
                    </div>
                </div>

                <div class="form-col">
                    <div class="form-group">
                        {{ form_label(artistForm.instagramAccount, 'Instagram Tag', {'label_attr': {'class': 'required-field'}}) }}
                        {{ form_widget(artistForm.instagramAccount, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                        {% for error in artistForm.instagramAccount.vars.errors %}
                            <span class="error-message">{{ error.message }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-col">
                    <div class="form-group">
                        {{ form_label(artistForm.imageUrl, 'Image URL', {'label_attr': {'class': 'optional-field'}}) }}
                        {{ form_widget(artistForm.imageUrl, {'attr': {'class': 'form-control', 'type': 'url'}}) }}
                        {% for error in artistForm.imageUrl.vars.errors %}
                            <span class="error-message">{{ error.message }}</span>
                        {% endfor %}
                    </div>
                </div>

                <div class="form-col">
                    <div class="form-group">
                        {{ form_label(artistForm.managerEmail, 'Email Manager', {'label_attr': {'class': 'optional-field'}}) }}
                        {{ form_widget(artistForm.managerEmail, {'attr': {'class': 'form-control', 'type': 'email'}}) }}
                        {% for error in artistForm.managerEmail.vars.errors %}
                            <span class="error-message">{{ error.message }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="button-group">
                <a href="{{ path('artist_index') }}" class="btn-outline-custom">Cancel</a>
                <button type="submit" class="btn-custom" data-turbo="false">Update Artist</button>
            </div>

            {{ form_end(artistForm) }}
        </div>
    </div>
{% endblock %}
