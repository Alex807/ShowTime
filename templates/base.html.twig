<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>SoundScape Hub</title> {# title to display in chrome tab #}
        <link rel="icon" type="image/x-icon" href="{{ asset('images/logo-tab.ico') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

        {% block stylesheets %}{% endblock %}

        {% block hero_styles %}{% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block hero_section %}{% endblock %}
        {% block body %}{% endblock %}

        <script> {# essential to reload all scripts from twig files when redirect back to profile.html.twig file #}
            document.addEventListener("turbo:load", function() {
                // Reinitialize any JavaScript that needs to run on page load
                if (typeof initializeFestivalRows === 'function') {
                    initializeFestivalRows();
                }
            });
        </script>
    </body>
</html>
