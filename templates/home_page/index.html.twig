        }

        body {
            font-family: 'Arial', sans-serif;
            overflow-x: hidden;
        }

        /* Navigation Bar */
        .navbar-custom {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: rgba(0, 0, 0, 0.85);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
            z-index: 1000;
            padding: 15px 0;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            width: 100%;
            transform: translateZ(0);
        }

        .navbar-custom::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(90deg,
            rgba(255, 107, 53, 0.05) 0%,
            rgba(197, 41, 155, 0.05) 50%,
            rgba(102, 126, 234, 0.05) 100%);
            z-index: -1;
        }

        .navbar-custom .container {
            position: relative;
        }

        .navbar-custom .navbar-nav {
            gap: 8px;
        }

        .navbar-custom .navbar-nav .nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            font-weight: 500;
            padding: 12px 20px !important;
            margin: 0;
            border-radius: 30px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            font-size: 0.95rem;
            letter-spacing: 0.3px;
        }

        .navbar-custom .navbar-nav .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.5s;
        }

        .navbar-custom .navbar-nav .nav-link:hover::before {
            left: 100%;
        }

        .navbar-custom .navbar-nav .nav-link:hover {
            color: white !important;
            background: linear-gradient(135deg,
            rgba(255, 107, 53, 0.2) 0%,
            rgba(197, 41, 155, 0.2) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 107, 53, 0.15);
        }

        .navbar-custom .btn-nav {
            padding: 12px 24px;
            font-size: 0.9rem;
            font-weight: 600;
            border: none;
            border-radius: 30px;
            text-decoration: none;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            margin: 0 4px;
            position: relative;
            overflow: hidden;
            letter-spacing: 0.3px;
            text-transform: uppercase;
            font-size: 0.85rem;
        }

        .navbar-custom .btn-nav::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.6s;
        }

        .navbar-custom .btn-nav:hover::before {
            left: 100%;
        }

        .navbar-custom .btn-nav-login {
            background: linear-gradient(135deg, #ff6b35 0%, #ff9f43 100%);
            color: white;
            border: 1px solid rgba(255, 107, 53, 0.3);
        }

        .navbar-custom .btn-nav-login:hover {
            background: linear-gradient(135deg, #ff9f43 0%, #ff6b35 100%);
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(255, 107, 53, 0.4);
        }

        .navbar-custom .btn-nav-signup {
            background: linear-gradient(135deg, #c5299b 0%, #667eea 100%);
            color: white;
            border: 1px solid rgba(197, 41, 155, 0.3);
        }

        .navbar-custom .btn-nav-signup:hover {
            background: linear-gradient(135deg, #667eea 0%, #c5299b 100%);
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(197, 41, 155, 0.4);
        }

