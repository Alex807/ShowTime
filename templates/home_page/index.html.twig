        /* Video Background */
        .hero-section {
            height: 100vh;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .video-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: 0;
        }

        /* Floating particles */
        .particles {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .particle {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        .particle:nth-child(1) { width: 10px; height: 10px; left: 10%; animation-delay: 0s; }
        .particle:nth-child(2) { width: 15px; height: 15px; left: 20%; animation-delay: 1s; }
        .particle:nth-child(3) { width: 8px; height: 8px; left: 30%; animation-delay: 2s; }
        .particle:nth-child(4) { width: 12px; height: 12px; left: 40%; animation-delay: 3s; }
        .particle:nth-child(5) { width: 20px; height: 20px; left: 50%; animation-delay: 4s; }
        .particle:nth-child(6) { width: 6px; height: 6px; left: 60%; animation-delay: 5s; }
        .particle:nth-child(7) { width: 14px; height: 14px; left: 70%; animation-delay: 1.5s; }
        .particle:nth-child(8) { width: 18px; height: 18px; left: 80%; animation-delay: 2.5s; }
        .particle:nth-child(9) { width: 9px; height: 9px; left: 90%; animation-delay: 3.5s; }

        @keyframes float {
            0%, 100% { transform: translateY(100vh) rotate(0deg); opacity: 0; }
            10%, 90% { opacity: 1; }
            50% { transform: translateY(-10vh) rotate(180deg); }
        }

        /* Logo */
        .logo {
            width: 250px;
            height: 250px;
            animation: logoFloatSpin 4s ease-in-out infinite;
            position: absolute;
            top: 85px;
            left: 25px;
            z-index: 10;
        }

        @keyframes logoFloatSpin {
            0%, 20% { transform: translateY(0px) rotateY(0deg); } /* Float start, no rotation */
            50% { transform: translateY(-10px) rotateY(0deg); } /* Float up, no rotation */
            46% { transform: translateY(-10px) rotateY(-360deg); } /* Fast Y-axis spin while up */
            60%, 80% { transform: translateY(0px) rotateY(-360deg); } /* Pause at end of spin */
        }

